@import ('nib')
global-reset()

// Variables
font-main = 'Lora', georgia
text-main = mintcream
text-active = mediumspringgreen
screen-small = 'screen and (min-width 40rem)'
screen-medium = 'screen and (min-width 48rem)'

// Global
body
  color black
  background cornsilk
  font-family font-main, serif

nav
footer
  color text-main
  background saddlebrown

// Navbar
nav
  display flex
  align-items center
  text-align center
  user-select none
  font-weight bold
  padding 1rem
  gap 1rem

  p
    font-size 1.25rem

    @media screen-small
      font-size 1.375rem

    @media screen-medium
      font-size 1.5rem

  span
    display inherit
    flex-wrap wrap
    align-items center
    justify-content center
    gap 0.75rem

    button
      border 0
      outline none
      cursor pointer
      font-size 1.1rem
      font-weight bold
      font-family font-main, serif
      color text-main
      background transparent
      transition scale cubic-bezier(0.4, 0, 0.2, 1) 150ms

      &:hover
        scale 1.1

      @media screen-small
        font-size 1.25rem

      @media screen-medium
        font-size 1.375rem

// Footer
footer
  display flex
  flex-direction column
  align-items center
  justify-content center
  text-align center
  user-select none
  font-weight bold
  font-size 1.125rem
  padding 1.5rem
  gap 0.25rem

  a
    display inherit
    align-items center
    justify-content center
    text-align center
    gap 0.25rem
    color text-main
    text-decoration none
    transition scale cubic-bezier(0.4, 0, 0.2, 1) 150ms

    &:hover
      scale 1.1

  @media screen-small
    font-size 1.25rem

  @media screen-medium
    font-size 1.375rem